<div class="fond-cards">
  <h1 class="title-cards">Les grosses carettes tunées bien fraîches chacal</h1>

  <div class="cards">
    <% @cars.each do |car| %>
      <%= link_to(car_path(car)) do %>
        <div class="cardo">
          <%=image_tag("carspardefaut")%>
          <div class="content-cards">
            <h5><%=car.title%></h5>
            <p><%= car.description %></p>
            <p><%= car.price %>€ par jour</p>
          </div>
        </div>
       <% end %>
      <% end %>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
