<div class="fond-cards">
  <h1 class="title-cards">Les grosses carettes tunées bien fraîches chacal</h1>

<div class="container">
  <div class="cards">
    <% @cars.each do |car| %>
      <%= link_to(car_path(car)) do %>
        <div class="cardo">
          <%=image_tag("carsfondblanc.jpg")%>
          <div class="content-cards">
          <div class="title-descrition-cardo">
              <h5> <strong><%=car.title%></strong></h5>
              <p id="descrition-paragraphe"><%= car.description %></p>
            </div>
            <div class="price-cardo">
             <p><strong><%= car.price %>€</strong><span id="price-text"> par jour</span> </p>
            </div>
          </div>
        </div>
       <% end %>
      <% end %>
    </div>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
