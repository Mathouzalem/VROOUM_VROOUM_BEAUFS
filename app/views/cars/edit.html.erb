<div class= "container-css text-center">
    <div class="form-card">
        <%= simple_form_for @car do |f| %>
          <%= f.input :title, label: "Titre de mon annonce"%>
          <%= f.input :description, label: "Description de mon annonce" %>
          <%= f.input :price, label: "Prix (par jour)" %>
          <%= f.input :motor, label: "Moteur"%>
          <%= f.input :fuel, label: "Carburant" %>
          <%= f.input :year, label: "Année de mise en circulation"%>
          <%= f.input :brand, label: "Marque"%>
          <%= f.input :modele, label: "Modèle"%>
          <%= f.input :power, label: "Puissance"%>
          <%= f.input :address, label: "Localisation de ma voiture", input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"}, wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
          <%= f.input :name, label: "Nom de ma localisation"%>
          <%= f.input :photo, as: :file %>
          <%= f.submit "MODIFIER", class: "btn-update"%>
        <% end %>
    </div>
</div>






